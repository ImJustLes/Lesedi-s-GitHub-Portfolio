<Page x:Class="PROG6212POEPART1.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6212POEPART1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <Label x:Name="label" Content="LOGIN TO APP" HorizontalAlignment="Left" Margin="117,43,0,0" VerticalAlignment="Top" Height="88" Width="388" FontSize="72" FontFamily="Impact"/>
        <Label x:Name="label1" Content="Username:" HorizontalAlignment="Left" Margin="136,179,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsernameLogin" HorizontalAlignment="Left" Margin="207,183,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="209"/>
        <Label x:Name="label1_Copy" Content="Password:" HorizontalAlignment="Left" Margin="136,244,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPasswordLogin" HorizontalAlignment="Left" Margin="207,248,0,0" VerticalAlignment="Top" Width="209" PasswordChar="●"/>
        <Button x:Name="btnEnter" Content="Enter" HorizontalAlignment="Left" Margin="236,312,0,0" VerticalAlignment="Top" Width="80" Click="btnEnter_Click"/>

    </Grid>
</Page>
